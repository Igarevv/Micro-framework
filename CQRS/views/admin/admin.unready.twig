{% extends '/admin/admin.main.twig' %}

{% block main %}
    <div class="container">
        {% if session().hasFlash('errorFromDb') %}
            <div class="alert alert-danger mt-2" role="alert">
                <p class="mb-0 text-bold">{{ session().flash('errorFromDb')[0]['error'] }}</p>
            </div>
        {% endif %}
        {% if collection is empty %}
            <div class="d-flex align-items-center justify-content-center" style="height: 60vh">
                <div class="text-center">
                    <h1 class="display-2 fw-bold text-warning">Something wrong!</h1>
                    <p class="fs-2">Books not found.</p>
                    <p class="lead">
                        Some of the actions you can do for now
                    </p>
                    <a href="/admin/list" class="btn btn-primary">Go to books table</a>
                    <a href="/admin/book" class="btn btn-primary">Add new book</a>
                    <a href="/admin/home" class="btn btn-primary">Admin home page</a>
                </div>
            </div>
        {% else %}
            <div class="dropdown d-flex align-items-center mt-3">
                <p class="text-bold mr-3 mb-0">Show</p>
                <select id="book-to-show" class="form-select form-select-sm" data-page-id="{{ books['page'] }}"
                        aria-label=".form-select-sm example">
                    <option selected value="10">10</option>
                    <option value="50">50</option>
                    <option value="100">100</option>
                    <option value="200">200</option>
                </select>
                <p class="text-bold ml-3 mb-0">books</p>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body text-center">
                                <h5 class="card-title m-b-0 text-primary">Published books</h5>
                            </div>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead class="thead-light">
                                    <tr>
                                        <th class="text-primary" scope="col">Id</th>
                                        <th class="text-primary" scope="col">Title</th>
                                        <th class="text-primary" scope="col">Author</th>
                                        <th class="text-primary" scope="col">Year</th>
                                        <th class="text-primary" scope="col">ISBN</th>
                                        <th class="text-primary" scope="col">Created At</th>
                                        <th class="text-center text-primary" scope="col">Delete book</th>
                                    </tr>
                                    </thead>
                                    <tbody class="customizable">
                                    {% for book in collection %}
                                        <tr id="book-{{ book.bookId }}">
                                            <th scope="row">{{ book.bookId }}</th>
                                            <td>{{ book.title }}</td>
                                            <td>{{ book.authorName }}</td>
                                            <td>{{ book.year }}</td>
                                            <td>{{ book.isbn }}</td>
                                            <td>{{ book.createdAt }}</td>
                                            <td class="text-center">
                                                <button type="button" class="btn btn-danger" data-book-id="{{ book.bookId }}"
                                                        onclick="deleteBook(this)">Delete
                                                </button>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex mt-3 justify-content-end">
                        <nav aria-label="...">
                            <ul class="pagination">
                                {% if page > 1 %}
                                    <li class="page-item">
                                        <a class="page-link" href="?page=1" tabindex="-1">First</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="?page={{ page - 1 }}">Prev</a>
                                    </li>
                                {% endif %}
                                {% for pageNum in 1..count %}
                                    {% if pageNum == page %}
                                        <li class="page-item active">
                                            <span class="page-link">{{ pageNum }} <span class="sr-only">(current)</span></span>
                                        </li>
                                    {% else %}
                                        <li class="page-item">
                                            <a class="page-link" href="?page={{ pageNum }}">{{ pageNum }}</a>
                                        </li>
                                    {% endif %}
                                {% endfor %}
                                {% if page < count %}
                                    <li class="page-item">
                                        <a class="page-link" href="?page={{ page + 1 }}">Next</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="?page={{ count }}">Last</a>
                                    </li>
                                {% endif %}
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
            <script src="/views/assets/js/deleteBook.js"></script>
            <script src="/views/assets/js/bookToShow.js"></script>
        {% endif %}
    </div>
{% endblock %}